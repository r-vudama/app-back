html 
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/styles.css")
        title="Desaf√≠o 11 - PUG"
    body
        h2(class="title")="Lista items"

        table(class="table")
            thead(class="thead")
                tr(class="thead__tr")
                    th(class="thead__th")="Producto"
                    th(class="thead__th")="Precio"
                    th(class="thead__th")="Imagen"
            tbody
                each val in response
                    tr(class="tr")
                        th(class="tr__th")=val.title
                        td(class="tr__td")=val.price
                        td(class="tr__td")
                            img(src=val.thumbnail)
